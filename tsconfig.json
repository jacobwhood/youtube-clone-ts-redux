{
  "compilerOptions": {
    "outDir": "./client/dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./client/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
